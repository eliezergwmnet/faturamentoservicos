<style>
    .uploadimagemsistema {
        display: none !important;
    }

    .newbtn {
        cursor: pointer;
    }
</style>

<div class="modal fade" id="modalCadastroModulo" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div class="modal-header" style="margin-bottom: 20px;background-color: #fff !important;">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="breadcomb-wp">
                            <div class="breadcomb-icon">
                                <i class="notika-icon notika-app"></i>
                            </div>
                            <div class="breadcomb-ctn">
                                <h2>Modulos</h2>
                                <p>Cadastro de Modulo</p>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <input id="mod_id" name="mod_id" type="hidden" value="" />
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label for="mod_nome" class="control-label mb-1">Nome Modulo</label>
                        <div class="nk-int-st">
                            <input id="mod_nome" placeholder="Nome do Perfil" name="mod_nome" type="text" value="" class="form-control obrigatorio">
                        </div>

                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label for="mod_descricao" class="control-label mb-1">Descrição Modulo</label>
                        <div class="nk-int-st">
                            <textarea id="mod_descricao" rows="4" placeholder="Descrição do Modulo" name="mod_descricao" type="text" value="" class="form-control obrigatorio"></textarea>
                        </div>

                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="row">
                        <div class="col-sm-5 text-center">
                            <label for="usu_senha" class="control-label mb-1 uploadImagem">Imagem Pequena</label><br />
                            <label class=newbtn>
                                <img id="image_pequena" src="http://placehold.it/180x80">
                                <input id="conf_imagempequena" name="conf_imagempequena" type="hidden">
                                <input class="uploadimagemsistema" onchange="salvarImagemModulo(this);" type="file">
                            </label>
                        </div>
                    </div>       
                </div>
            </div>
            <div class="modal-footer" style="margin-top: 30px">
                <button type="button" class="btn btn-default" onclick="CadastrarModulo()" data-dismiss="modal">Salvar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>