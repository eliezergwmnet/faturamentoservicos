 <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@HelpSistemaModel.Configuracao().Titulo</title>
    <meta name="description" content="@HelpSistemaModel.Configuracao().Descricao">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="@HelpSistemaModel.Configuracao().IconTouch">
    <link rel="shortcut icon" href="@HelpSistemaModel.Configuracao().Icon">


    @Styles.Render("~/Base/css")
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>
<body class="bg-dark" style="background:#f1f1f1 !important">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="@HelpSistemaModel.Configuracao().Logo" alt="HelpSistemaModel.Configuracao().Titulo">
                    </a>
                </div>
                <div class="login-form">
                    <form method="post">
                        <div class="form-group">
                            <label>E-Mail</label>
                            <input type="email" name="txtLogin" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input type="password" name="txtSenha" class="form-control" placeholder="Senha">
                        </div>
                        @if (Request["error"] != null)
                        {
                            <h5 style="color: red; margin-bottom: 20px">Login ou Senha Inválido</h5>
                        }
                        @if (Request["company"] != null)
                        {
                            <h5 style="color: red; margin-bottom: 20px">Não existe nenhuma empresa adicionado a sua conta, contate o administrador!</h5>
                        }
                        <div class="checkbox">
                            @if (Globais.Helper.Globais.CoolieAtivo)
                            {
                            <label>
                                <input type="checkbox" name="cbolembrarsenha"> Mantenha conectado
                            </label>
                            }
                            <label class="pull-right">
                                <a href="@Url.Content("~/Login/EsqueciSenha")">Esqueceu a senha?</a>
                            </label>
                        </div>
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Acessar Sistema</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Base/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
    @Scripts.Render("~/Base/Dados")

</body>
</html>
