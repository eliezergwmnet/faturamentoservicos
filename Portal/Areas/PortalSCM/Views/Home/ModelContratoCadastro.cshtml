<div class="modal fade" id="SCMCadastroContrato" role="dialog">
    <div class="modal-dialog modals-default">
        <div class="modal-content">
            <div class="modal-header" style="margin-bottom: 20px;background-color: #fff !important;">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="breadcomb-wp">
                            <div class="breadcomb-icon">
                                <i class="notika-icon notika-app"></i>
                            </div>
                            <div class="breadcomb-ctn">
                                <h2>Contrato</h2>
                                <p>Cadastro de Contrato</p>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="SCMCadastroServico" method="get">
                <div class="modal-body">
                    <input id="cont_id" name="cont_id" type="hidden" value="" />
                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="cli_id" class="control-label mb-1">Cliente</label>
                            <div class="nk-int-st">
                                <select id="cli_id" name="cli_id" class="form-control obrigatorio"></select>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="mod_nome" class="control-label mb-1">Numero Contrato</label>
                            <div class="nk-int-st">
                                <input id="cont_numero" placeholder="Numero Contrato" name="cont_numero" type="text" value="" class="form-control obrigatorio">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-6 col-sm-12 col-xs-12">
                        <div class="fm-checkbox">
                            <label><input type="checkbox" name="cont_avulso" id="cont_avulso" checked="" class="i-checks"> <i></i> Faturamento Mensal </label>
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="mod_nome" class="control-label mb-1">Nome</label>
                            <div class="nk-int-st">
                                <input id="cont_nome" placeholder="Nome" name="cont_nome" type="text" value="" class="form-control obrigatorio">
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label for="mod_nome" class="control-label mb-1">Descrição</label>
                            <div class="nk-int-st">
                                <textarea id="cont_descricao" placeholder="Descrição" name="cont_descricao" type="text" value="" class="form-control obrigatorio"></textarea>
                            </div>
                        </div>
                    </div>
                    




                </div>
                <div class="modal-footer" style="margin-top: 30px">
                    <button type="button" class="btn btn-default" onclick="SCMCadastrarServicos()" >Salvar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>